{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "links": {
            "type": "object",
            "properties": {
                "cards.holds": {
                    "type": "string",
                    "format": "uri",
                    "pattern": "/cards/{cards.id}/card_holds",
                    "required": true
                },
                "cards.debits": {
                    "type": "string",
                    "format": "uri",
                    "pattern": "/cards/{cards.id}/debits",
                    "required": true
                },
                "cards.customer": {
                    "type": "string",
                    "format": "uri",
                    "pattern": "/customers/{cards.customer}",
                    "required": true
                }
            },
            "required": false
        },
        "meta": {
            "type": "object",
            "required": false
        },
        "cards": {
            "items": {
                "$ref": "_models/cards.json"
            },
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "required": true
        }
    }
}

{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "links": {
            "type": "object",
            "properties": {
                "orders.debits": {
                    "type": "string",
                    "format": "uri",
                    "pattern": "/orders/{orders.id}/debits",
                    "required": true
                },
                "orders.refunds": {
                    "type": "string",
                    "format": "uri",
                    "pattern": "/orders/{orders.id}/refunds",
                    "required": true
                },
                "orders.credits": {
                    "type": "string",
                    "format": "uri",
                    "pattern": "/orders/{orders.id}/credits",
                    "required": true
                },
                "orders.reversals": {
                    "type": "string",
                    "format": "uri",
                    "pattern": "/orders/{orders.id}/reversals",
                    "required": true
                },
                "orders.buyers": {
                    "type": "string",
                    "format": "uri",
                    "pattern": "/orders/{orders.id}/buyers",
                    "required": true
                },
                "orders.merchant": {
                    "type": "string",
                    "format": "uri",
                    "pattern": "/customers/{orders.merchant}",
                    "required": true
                }
            },
            "required": false
        },
        "meta": {
            "type": "object",
            "required": false
        },
        "orders": {
            "items": {
                "$ref": "_models/order.json"
            },
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "required": true
        }
    }
}
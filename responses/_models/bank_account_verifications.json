{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "id": {
            "type": "string",
            "pattern": "BZ[a-zA-Z0-9]{21,22}",
            "required": true
        },
        "href": {
            "type": "string",
            "format": "uri",
            "required": true
        },
        "created_at": {
            "type": "string",
            "format": "date-time",
            "required": true
        },
        "updated_at": {
            "type": "string",
            "format": "date-time",
            "required": true
        },
        "attempts": {
            "type": "integer",
            "minimum": 0,
            "maximum": 3,
            "required": true
        },
        "attempts_remaining": {
            "type": "integer",
            "minimum": 0,
            "maximum": 3,
            "required": true
        },
        "deposit_status": {
            "$ref": "status.json",
            "required": true
        },
        "verification_status": {
            "$ref": "status.json",
            "required": true
        },
        "meta": {
            "type": "object",
            "required": true
        },
        "links": {
            "type": "object",
            "properties": {
                "bank_account": {
                    "type": "string",
		    "pattern": "BA[a-zA-Z0-9]{21,22}",
                    "required": true
                }
            },
            "required": true,
            "additionalProperties": false
        }
    },
    "additionalProperties": false
}

{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "id": {
            "type": "string",
            "required": true,
            "pattern": "RF[a-zA-Z0-9]{16,32}"
        },
        "href": {
            "type": "string",
            "format": "uri",
            "required": true
        },
        "created_at": {
            "type": "string",
            "format": "date-time",
            "required": true
        },
        "updated_at": {
            "type": "string",
            "format": "date-time",
            "required": true
        },
        "amount": {
            "type": "integer",
            "minimum": 1,
            "required": true
        },
        "marketplace_fee": {
            "type": "integer",
            "minimum": 0,
            "required": true
        },
        "currency": {
            "type": "string",
            "enum": [
                "USD"
            ],
            "required": true
        },
        "description": {
            "type": [
                "string",
                "null"
            ],
            "required": true
        },
        "status": {
            "$ref": "status.json",
            "required": true
        },
        "meta": {
            "type": "object",
            "required": true
        },
        "links": {
            "type": "object",
            "properties": {
                "debit": {
                    "type": "string",
                    "pattern": "WD[a-zA-Z0-9]{16,32}",
                    "required": true
                },
                "order": {
                    "type": [
                        "null",
                        "string"
                    ],
                    "pattern": "OR[a-zA-Z0-9]{16,32}",
                    "required": true
                }
            },
            "required": true,
            "additionalProperties": false
        }
    },
    "additionalProperties": false
}
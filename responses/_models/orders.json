{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "id": {
            "type": "string",
            "pattern": "OR[a-zA-Z0-9]{16,32}",
            "required": true
        },
        "href": {
            "type": "string",
            "format": "uri",
            "required": true
        },
        "created_at": {
            "type": "string",
            "format": "date-time",
            "required": true
        },
        "updated_at": {
            "type": "string",
            "format": "date-time",
            "required": true
        },
        "currency": {
            "type": "string",
            "enum": [
                "USD"
            ],
            "required": true
        },
        "amount": {
            "type": "integer",
            "minimum": 0,
            "required": true
        },
        "amount_escrowed": {
            "type": "integer",
            "minimum": 0,
            "required": true
        },
        "marketplace_fee": {
            "type": "integer",
            "minimum": 0,
            "required": true
        },
        "description": {
            "type": [
                "string",
                "null"
            ],
            "required": true
        },
        "delivery_address": {
            "$ref": "address.json",
            "required": true
        },
        "meta": {
            "type": "object",
            "required": true
        },
        "links": {
            "type": "object",
            "properties": {
                "merchant": {
                    "type": "string",
                    "pattern": "CU[a-zA-Z0-9]{21,22}",
                    "required": true
                }
            },
            "required": true,
            "additionalProperties": false
        }
    },
    "additionalProperties": false
}
{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "id": {
            "type": "string",
            "pattern": "HL[a-zA-Z0-9]{16,32}"
        },
        "href": {
            "type": "string",
            "format": "uri"
        },
        "created_at": {
            "type": "string",
            "format": "date-time"
        },
        "updated_at": {
            "type": "string",
            "format": "date-time"
        },
        "expires_at": {
            "type": "string",
            "format": "date-time"
        },
        "voided_at": {
            "type": [
                "string",
                "null"
            ],
            "format": "date-time"
        },
        "transaction_number": {
            "description": "An identifier for this transaction.",
            "type": "string",
            "pattern": "HL[0-9A-Z]{3}-[0-9A-Z]{3}-[0-9A-Z]{4}"
        },
        "amount": {
            "description": "Amount in cents for this card_hold",
            "type": "integer",
            "minimum": 1
        },
        "currency": {
            "type": "string",
            "enum": [
                "USD"
            ]
        },
        "description": {
            "description": " A description of the hold, used for display purposes.",
            "type": [
                "string",
                "null"
            ]
        },
        "status": {
            "$ref": "status.json"
        },
        "failure_reason_code": {
            "type": [
                "string",
                "null"
            ]
        },
        "failure_reason": {
            "description": "A human readable error message with the reason for the failure",
            "type": [
                "string",
                "null"
            ]
        },
        "meta": {
            "$ref": "meta.json"
        },
        "links": {
            "type": "object",
            "properties": {
                "card": {
                    "description": "The funding source for this hold.",
                    "type": "string",
                    "pattern": "CC[a-zA-Z0-9]{16,32}"
                },
                "debit": {
                    "description": "The debit that was created from this card_hold if it has been captured",
                    "type": [
                        "null",
                        "string"
                    ],
                    "pattern": "WD[a-zA-Z0-9]{16,32}"
                }
            },
            "requird": [
                "card",
                "debit"
            ],
            "additionalProperties": false
        }
    },
    "additionalProperties": false,
    "required": [
        "id",
        "href",
        "created_at",
        "updated_at",
        "expires_at",
        "voided_at",
        "transaction_number",
        "amount",
        "currency",
        "description",
        "status",
        "failure_reason_code",
        "failure_reason",
        "meta",
        "links"
    ]
}

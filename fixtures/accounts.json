{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "links": {
            "type": "object",
            "properties": {
                "accounts.customer": {
                    "type": "string",
                    "format": "uri",
                    "pattern": "/customers/{accounts.customer}"
                },
                "accounts.credits": {
                    "type": "string",
                    "format": "uri",
                    "pattern": "/accounts/{accounts.id}/credits"
                },
                "accounts.debits": {
                    "type": "string",
                    "format": "uri",
                    "pattern": "/accounts/{accounts.id}/debits"
                },
                "accounts.transfers": {
                    "type": "string",
                    "format": "uri",
                    "pattern": "/accounts/{accounts.id}/transfers"
                }
            },
            "additionalProperties": false,
            "required": [
                "accounts.customer",
                "accounts.credits",
                "accounts.debits"
            ]
        },
        "meta": {
            "type": "object"
        },
        "accounts": {
            "items": {
                "$ref": "_models/account.json"
            },
            "type": "array",
            "minItems": 1,
            "uniqueItems": true
        }
    },
    "required": [
        "accounts"
    ]
}
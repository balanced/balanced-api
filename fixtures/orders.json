{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "links": {
            "type": "object",
            "properties": {
                "orders.debits": {
                    "type": "string",
                    "format": "uri",
                    "pattern": "/orders/{orders.id}/debits"
                },
                "orders.refunds": {
                    "type": "string",
                    "format": "uri",
                    "pattern": "/orders/{orders.id}/refunds"
                },
                "orders.credits": {
                    "type": "string",
                    "format": "uri",
                    "pattern": "/orders/{orders.id}/credits"
                },
                "orders.reversals": {
                    "type": "string",
                    "format": "uri",
                    "pattern": "/orders/{orders.id}/reversals"
                },
                "orders.buyers": {
                    "type": "string",
                    "format": "uri",
                    "pattern": "/orders/{orders.id}/buyers"
                },
                "orders.merchant": {
                    "type": "string",
                    "format": "uri",
                    "pattern": "/customers/{orders.merchant}"
                }
            },
            "required": ["orders.debits", "orders.refunds", "orders.credits", "orders.reversals", "orders.buyers", "orders.merchant"]
        },
        "meta": {
            "type": "object"
        },
        "orders": {
            "items": {
                "$ref": "_models/order.json"
            },
            "type": "array",
            "minItems": 1,
            "uniqueItems": true
        }
    },
    "required": ["orders"]
}
